@{
    ViewData["Title"] = "Switch Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4 text-center">Select Role</h2>

<form asp-action="Role" asp-controller="Account" method="post" class="mx-auto" style="max-width:400px;">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label class="form-label">Choose role</label>
        <select name="role" class="form-select">
            <option>Lecturer</option>
            <option>HOD</option>
            <option>Manager</option>
        </select>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Set Role</button>
    </div>
</form>

