@model ClaimSystem.Models.Claim

@{
    ViewData["Title"] = "Submit Claim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">Submit Claim</h2>

@if (TempData["Message"] != null)
{
    <div class="@((TempData["AlertClass"] as string) ?? "alert-info") alert text-center fw-bold">
        @TempData["Message"]
    </div>
}

<form asp-action="Submit" asp-controller="Claim" method="post" enctype="multipart/form-data"
      class="shadow p-4 rounded bg-white" style="max-width:700px;margin:auto;">
    @Html.AntiForgeryToken()

    <!-- Hidden workflow metadata -->
    <input type="hidden" asp-for="Status" />
    <input type="hidden" asp-for="IsAutoSafe" />
    <input type="hidden" asp-for="RequiresManagerApproval" />

    <div class="mb-3">
        <label asp-for="LecturerName" class="form-label fw-semibold">Lecturer Name</label>
        <input asp-for="LecturerName" class="form-control" />
        <span asp-validation-for="LecturerName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HoursWorked" class="form-label fw-semibold">Hours Worked</label>
        <input asp-for="HoursWorked" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="HoursWorked" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HourlyRate" class="form-label fw-semibold">Hourly Rate (R)</label>
        <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="HourlyRate" class="text-danger"></span>
    </div>

    <!-- Auto-calculated total -->
    <div class="mb-3">
        <label class="form-label fw-semibold">Total Payment (Auto-Calculated)</label>
        <div class="form-control bg-light" id="TotalPaymentDisplay">0.00</div>
        <input type="hidden" asp-for="TotalPayment" />
    </div>

    <!-- Supporting document upload -->
    <div class="mb-3">
        <label class="form-label fw-semibold">Supporting Document (Optional)</label>
        <input type="file" name="supportingDocument" class="form-control" accept=".pdf,.doc,.docx" />
        <span asp-validation-for="SupportingDocumentPath" class="text-danger"></span>
        <div class="form-text">Max file size: 5 MB. Allowed: PDF, DOC, DOCX.</div>
    </div>

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-primary px-4">
            <i class="bi bi-send"></i> Submit Claim
        </button>
    </div>
</form>

@section Scripts {
    <script src="~/js/claim.js"></script>
    <partial name="_ValidationScriptsPartial"   />
}