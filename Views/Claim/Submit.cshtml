@model ClaimSystem.Models.Claim

@{
    ViewData["Title"] = "Submit Claim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">Submit Claim</h2>

@if (TempData["Message"] != null)
{
    <div class="@((TempData["AlertClass"] as string) ?? "alert-info") alert text-center fw-bold">
        @TempData["Message"]
    </div>
}

<form asp-action="Submit" asp-controller="Claim" method="post" enctype="multipart/form-data" class="shadow p-4 rounded bg-white" style="max-width:700px;margin:auto;">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="LecturerName" class="form-label fw-semibold">Lecturer Name</label>
        <input asp-for="LecturerName" class="form-control" />
        <span asp-validation-for="LecturerName" class="text-danger"></span>
    </div>

    <!-- StartTime field -->
    <div class="mb-3">
        <label asp-for="StartTime" class="form-label fw-semibold">Start Time</label>
        <input asp-for="StartTime" class="form-control" type="time" onchange="autoCalc()" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <!-- EndTime field -->
    <div class="mb-3">
        <label asp-for="EndTime" class="form-label fw-semibold">End Time</label>
        <input asp-for="EndTime" class="form-control" type="time" onchange="autoCalc()" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>

    <!-- HoursWorked field (manual input allowed) -->
    <div class="mb-3">
        <label asp-for="HoursWorked" class="form-label fw-semibold">Hours Worked</label>
        <input asp-for="HoursWorked" class="form-control" type="number" step="0.25" min="0.25" max="1000" onchange="autoCalc()" />
        <span asp-validation-for="HoursWorked" class="text-danger"></span>
    </div>

    <!-- HourlyRate field -->
    <div class="mb-3">
        <label asp-for="HourlyRate" class="form-label fw-semibold">Hourly Rate (R)</label>
        <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" onchange="autoCalc()" />
        <span asp-validation-for="HourlyRate" class="text-danger"></span>
    </div>

    <!-- TotalAmount field (readonly) -->
    <div class="mb-3">
        <label class="form-label fw-semibold">Total Amount (calculated)</label>
        <input asp-for="TotalAmount" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label fw-semibold">Supporting Document (Optional)</label>
        <input type="file" name="supportingDocument" class="form-control" accept=".pdf,.doc,.docx" />
        <div class="form-text">Max file size: 5 MB. Allowed: .pdf, .doc, .docx</div>
    </div>

    <div class="text-center mt-3">
        <button type="submit" class="btn btn-primary px-4">
            <i class="bi bi-send"></i> Submit Claim
        </button>
    </div>
</form>

@section Scripts {
    <script src="~/js/claim.js"></script>
    <partial name="_ValidationScriptsPartial" />

    <script>
        function autoCalc() {
            let start = document.getElementById("StartTime").value;
            let end = document.getElementById("EndTime").value;
            let rate = parseFloat(document.getElementById("HourlyRate").value);
            let hoursInput = document.getElementById("HoursWorked");

            // Only auto-calculate if start, end, and rate are valid
            if (start && end && rate > 0) {
                let startTime = new Date("2000-01-01 " + start);
                let endTime = new Date("2000-01-01 " + end);

                if (endTime > startTime) {
                    let hours = (endTime - startTime) / (1000*60*60);
                    hoursInput.value = hours.toFixed(2);
                    document.getElementById("TotalAmount").value = (hours * rate).toFixed(2);
                }
            } else {
                // If user manually changes hours, calculate total
                let manualHours = parseFloat(hoursInput.value);
                if (!isNaN(manualHours) && rate > 0) {
                    document.getElementById("TotalAmount").value = (manualHours * rate).toFixed(2);
                }
            }
        }
    </script>
}
