@model IEnumerable<ClaimSystem.Models.Claim>

@{
    ViewData["Title"] = "Manage Claims";
    var role = Context.Session.GetString("Role") ?? "Lecturer";
}

<h2 class="text-center mb-4">Manage Claims</h2>

@if (TempData["Message"] != null)
{
    <div class="alert @(TempData["AlertClass"] ?? "alert-info") text-center">
        @TempData["Message"]
    </div>
}

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-hover text-center align-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Lecturer Name</th>
                <th>Hours Worked</th>
                <th>Hourly Rate (R)</th>
                <th>Total (R)</th>
                <th>Date Submitted (UTC)</th>
                <th>Status</th>
                <th>Document</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.Id</td>
                    <td>@(string.IsNullOrWhiteSpace(claim.LecturerName) ? "Not specified" : claim.LecturerName)</td>
                    <td>@claim.HoursWorked.ToString("F2")</td>
                    <td>@claim.HourlyRate.ToString("F2")</td>
                    <td>@claim.TotalAmount.ToString("F2")</td>
                    <td>@claim.DateSubmitted.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <span class="badge
                            @(claim.Status == "Processed" ? "bg-success" :
                              claim.Status.Contains("Approved") ? "bg-primary" :
                              claim.Status == "Rejected" ? "bg-danger" :
                              claim.Status == "Returned" ? "bg-warning text-dark" :
                              "bg-secondary")">
                            @claim.Status
                        </span>
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(claim.SupportingDocumentPath))
                        {
                            <a href="@claim.SupportingDocumentPath" target="_blank" class="btn btn-sm btn-outline-primary">View</a>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </td>
                    <td>
                        @* Show approve/reject only to HOD, Manager, HR *@
                        @if (role.Equals("HOD", System.StringComparison.OrdinalIgnoreCase)
                             || role.Equals("Manager", System.StringComparison.OrdinalIgnoreCase)
                             || role.Equals("HR", System.StringComparison.OrdinalIgnoreCase)
                             || role.Equals("Admin", System.StringComparison.OrdinalIgnoreCase))
                        {
                            <form asp-action="Approve" method="post" class="d-inline confirm-form">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@claim.Id" />
                                <button type="submit" class="btn btn-success btn-sm me-1">Approve</button>
                            </form>

                            <form asp-action="Reject" method="post" class="d-inline confirm-form">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@claim.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                            </form>
                        }
                        else
                        {
                            <span class="text-muted">No actions</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info text-center">No claims have been submitted yet.</div>
}

<div class="text-center mt-4">
    <a asp-action="Submit" class="btn btn-primary">Submit New Claim</a>
</div>

@section Scripts {
    <script>
        document.querySelectorAll(".confirm-form").forEach(f => {
            f.addEventListener("submit", function (e) {
                const btn = this.querySelector("button");
                const allowed = confirm("Are you sure you want to perform this action?");
                if (!allowed) {
                    e.preventDefault();
                    return;
                }
                if (btn) {
                    btn.disabled = true;
                    btn.innerText = "Processing...";
                }
            });
        });
    </script>
}
